@@ -130,7 +130,7 @@ if test x$installed_tests = xyes; then
 fi
 AM_CONDITIONAL([ENABLE_INSTALLED_TESTS], [test "x$installed_tests" = xyes])
 
-mctestsdir=${libdir}/telepathy-mission-control-tests
